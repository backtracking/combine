# where to install the binaries
prefix=@prefix@
exec_prefix=@exec_prefix@
BINDIR=@bindir@

# where to install the man page
MANDIR=@mandir@

# other variables set by ./configure
OCAMLC   = @OCAMLC@
OCAMLOPT = @OCAMLOPT@
OCAMLDEP = @OCAMLDEP@
OCAMLLEX = @OCAMLLEX@
MENHIR = menhir # developers should have menhir installed
OCAMLLIB = @OCAMLLIB@
OCAMLBEST= @OCAMLBEST@
OCAMLVERSION = @OCAMLVERSION@
OCAMLWEB = @OCAMLWEB@
OCAMLWIN32 = @OCAMLWIN32@
EXE = @EXE@

INCLUDES =
BFLAGS = -g $(INCLUDES)
OFLAGS = -annot $(INCLUDES)
# main target
#############

all: $(OCAMLBEST) test

# bytecode and native-code compilation
######################################

LIBCMO = dlx.cmo zdd.cmo emc.cmo d4.cmo tiling.cmo
LIBCMX = $(LIBCMO:.cmo=.cmx)
LIBMLI = $(LIBCMO:.cmo=.mli)
$(LIBCMX): OFLAGS += -for-pack Reml
CMA = reml.cma
CMXA = reml.cmxa

GENERATED = parser.ml parser.mli lexer.ml version.ml

byte: $(CMA) reml.byte sudoku.byte queens.byte
opt: $(CMXA) reml.opt sudoku.opt queens.opt

reml.cma: reml.cmo
	$(OCAMLC) $(INCLUDES) -a -g -o $@ $^

reml.cmxa: reml.cmx
	$(OCAMLOPT) $(INCLUDES) -a -o $@ $^

reml.cmi: reml.cmo
reml.o: reml.cmx

reml.cmo: $(LIBCMO)
	$(OCAMLC) $(INCLUDES) -pack -g -o $@ $^

reml.cmx: $(LIBCMX)
	$(OCAMLOPT) $(INCLUDES) -pack -o $@ $^

CMO = parser.cmo lexer.cmo interp.cmo main.cmo
CMX = $(CMO:.cmo=.cmx)

ast.cmi $(CMO) queens.cmo sudoku.cmo test.cmo: reml.cmi
$(CMX) queens.cmx sudoku.cmx test.cmx: reml.cmi

reml.byte: $(CMA) $(CMO)
	$(OCAMLC) $(BFLAGS) -o $@ nums.cma unix.cma $^

reml.opt: $(CMXA) $(CMX)
	$(OCAMLOPT) $(OFLAGS) -o $@ nums.cmxa unix.cmxa $^

VERSION=0.42

version.ml: Makefile
	echo "let version = \""$(VERSION)"\"" > version.ml
	echo "let date = \""`date`"\"" >> version.ml

# test
######

test: test.byte reml.byte
	./test.byte
	for f in tests/*.rem; do ./reml.byte --parse-only $$f ; done

check: reml.opt
	for f in tests/*.rem; do ./reml.opt $$f ; done

test.byte: $(CMA) parser.cmo lexer.cmo interp.cmo test.cmo
	$(OCAMLC) -o $@ $(BFLAGS) nums.cma unix.cma $^

test.opt: $(CMXA) parser.cmx lexer.cmx interp.cmx queens.cmx test.cmx
	$(OCAMLOPT) -o $@ $(OFLAGS) nums.cmxa unix.cmxa $^

sudoku.byte: $(CMA) sudoku.cmo
	$(OCAMLC) -o $@ $(BFLAGS) str.cma $^

sudoku.opt: $(CMXA) sudoku.cmx
	$(OCAMLOPT) -o $@ $(OFLAGS) str.cmxa $^

queens.byte: $(CMA) queens.cmo
	$(OCAMLC) -o $@ $(BFLAGS) $^

queens.opt: $(CMXA) queens.cmx
	$(OCAMLOPT) -o $@ $(OFLAGS) $^


# installation
##############

INSTALL_LIBDIR=$(OCAMLLIB)/reml

install-indep:
	mkdir -p $(BINDIR)
	mkdir -p $(INSTALL_LIBDIR)
	# mkdir -p $(MANDIR)/man1
	# cp -f reml.1 $(MANDIR)/man1

install: install-indep install-$(OCAMLBEST) install-byte
	cp -f reml.$(OCAMLBEST) $(BINDIR)/reml$(EXE)

install-byte: install-indep
	cp -f reml.cmi $(CMA) $(INSTALL_LIBDIR)
	cp -f $(LIBMLI) $(INSTALL_LIBDIR)

install-opt: install-indep
	cp -f reml.a $(CMXA) $(INSTALL_LIBDIR)

# documentation
###############

.PHONY: doc test check

DOCFILES=zdd.mli dlx.mli emc.mli tiling.mli

doc:
	mkdir -p doc
	ocamldoc -d doc -html $(DOCFILES)

# export
########

EXPORTDIR=reml-$(VERSION)
TAR=$(EXPORTDIR).tar

WWW = /users/demons/filliatr/WWW/reml/

FILES = *.ml* Makefile.in configure configure.in .depend tests/*.rem \
	README INSTALL LICENSE

export: source export-doc
	cp README LICENSE $(WWW)
	mkdir -p $(WWW)/download/
	cp export/$(TAR).gz $(WWW)/download/

source:
	mkdir -p export/$(EXPORTDIR)
	cp --parents $(FILES) export/$(EXPORTDIR)
	rm -f export/$(EXPORTDIR)/parser.mly
	cd export ; tar cf $(TAR) $(EXPORTDIR) ; gzip -f --best $(TAR)

export-doc: doc
	cp -f -r doc/ $(WWW)
	caml2html -d $(WWW) queens.ml sudoku.ml
	cp -f www/*.html www/*.css $(WWW)
	mkdir -p $(WWW)/images/
	cp www/images/* $(WWW)/images/

# literate programming
######################

SOURCES =

reml.tex: $(SOURCES)
	$(OCAMLWEB) -o $@ $^

# generic rules
###############

.SUFFIXES: .mli .ml .cmi .cmo .cmx .mll .mly .tex .dvi .ps .html

.mli.cmi:
	$(OCAMLC) -c $(BFLAGS) $<

.ml.cmo:
	$(OCAMLC) -c $(BFLAGS) $<

.ml.o:
	$(OCAMLOPT) -c $(OFLAGS) $<

.ml.cmx:
	$(OCAMLOPT) -c $(OFLAGS) $<

.mll.ml:
	$(OCAMLLEX) $<

.mly.ml:
	$(MENHIR) -v $<
	perl -pi -e 's/4611686018427387903/max_int/g' parser.ml

.mly.mli:
	$(MENHIR) -v $<

.tex.dvi:
	latex $< && latex $<

.dvi.ps:
	dvips $< -o $@

.tex.html:
	hevea $<

###############
# file headers
###############

headers:
	headache -c misc/headache_config.txt -h misc/header.txt \
	    Makefile.in configure.in *.ml* README

# Emacs tags
############

tags:
	find . -name "*.ml*" | sort -r | xargs \
	etags "--regex=/let[ \t]+\([^ \t]+\)/\1/" \
	      "--regex=/let[ \t]+rec[ \t]+\([^ \t]+\)/\1/" \
	      "--regex=/and[ \t]+\([^ \t]+\)/\1/" \
	      "--regex=/type[ \t]+\([^ \t]+\)/\1/" \
              "--regex=/exception[ \t]+\([^ \t]+\)/\1/" \
	      "--regex=/val[ \t]+\([^ \t]+\)/\1/" \
	      "--regex=/module[ \t]+\([^ \t]+\)/\1/"

# Makefile is rebuilt whenever Makefile.in or configure.in is modified
######################################################################

Makefile: Makefile.in config.status
	./config.status

config.status: configure
	./config.status --recheck

configure: configure.in
	autoconf

# clean
#######

clean::
	rm -f *.cm[iox] *.o *~
	rm -f $(GENERATED) parser.output
	rm -f reml.byte reml.opt
	rm -f *.aux *.log reml.tex reml.dvi reml.ps

dist-clean distclean:: clean
	rm -f Makefile config.cache config.log config.status

# depend
########

.depend depend:: $(GENERATED)
	rm -f .depend
	$(OCAMLDEP) $(INCLUDES) *.ml *.mli > .depend

include .depend
